<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/postingProfile"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="top"
            android:foregroundGravity="top|left"
            app:srcCompat="@drawable/logo" />

<!--        <ImageView-->
<!--            android:id="@+id/postingProfile"-->
<!--            android:layout_width="60dp"-->
<!--            android:layout_height="60dp"-->
<!--            android:layout_gravity="top"-->
<!--            android:foregroundGravity="top|left"-->
<!--            app:srcCompat="@drawable/logo" />-->

        <LinearLayout
            android:layout_width="279dp"
            android:layout_height="61dp"
            android:layout_gravity="top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/idView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="ID"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/createView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:hint="time"
                android:textSize="18sp"/>
        </LinearLayout>

        <Button
            android:id="@+id/addfriendbtn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:drawableTop="@drawable/ic_baseline_add_24"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
    </LinearLayout>


    <ImageView
        android:id="@+id/postingImgView"
        android:layout_width="match_parent"
        android:layout_height="340dp"
        app:srcCompat="@drawable/logo" />


    <TextView
        android:id="@+id/contentView"
        android:layout_width="410dp"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:padding="20dp"
        android:layout_marginBottom="10dp"
        android:autofillHints=""
        android:ems="10"
        android:hint="content"
        android:textSize="30sp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:srcCompat="@drawable/favorite_border"
            />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="41dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_chat_black" />
    </LinearLayout>

</LinearLayout>